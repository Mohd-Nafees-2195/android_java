<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardbg"
    tools:context=".StudentRegisterActivity">

    <include
        android:id="@+id/login_toolbar"
        layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

    <EditText
        android:id="@+id/editTextSRegFullName"
        android:layout_width="@dimen/_290sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/input_bg"
        android:drawableLeft="@drawable/baseline_person_24"
        android:drawablePadding="@dimen/_10sdp"
        android:hint="Full Name"
        android:inputType="textPersonName"
        android:paddingLeft="@dimen/_13sdp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextSRegRollNumber"
        android:layout_width="@dimen/_290sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@drawable/input_bg"
        android:drawableLeft="@drawable/ic_baseline_assignment_ind_24"
        android:drawablePadding="@dimen/_10sdp"
        android:hint="Roll Number"
        android:inputType="text"
        android:paddingLeft="@dimen/_13sdp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextSRegFullName" />

    <EditText
        android:id="@+id/editTextSRegEmail"
        android:layout_width="@dimen/_290sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@drawable/input_bg"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:drawablePadding="@dimen/_10sdp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingLeft="@dimen/_13sdp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextSRegRollNumber" />

    <EditText
        android:id="@+id/editTextSRegMobileNumber"
        android:layout_width="@dimen/_290sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@drawable/input_bg"
        android:drawableLeft="@drawable/ic_baseline_phone_24"
        android:drawablePadding="@dimen/_10sdp"
        android:hint="Mobile Number"
        android:inputType="phone"
        android:paddingLeft="@dimen/_13sdp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.477"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextSRegEmail" />

    <EditText
        android:id="@+id/editTextSRegCourse"
        android:layout_width="@dimen/_290sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@drawable/input_bg"
        android:drawableLeft="@drawable/ic_baseline_menu_book_24"
        android:drawablePadding="@dimen/_10sdp"
        android:hint="Course"
        android:inputType="text"
        android:paddingLeft="@dimen/_13sdp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextSRegMobileNumber" />

    <EditText
        android:id="@+id/editTextSRegPassword"
        android:layout_width="@dimen/_290sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@drawable/input_bg"
        android:drawableLeft="@drawable/ic_baseline_key_24"
        android:drawablePadding="@dimen/_10sdp"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="@dimen/_13sdp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextSRegCourse" />


    <Button
        android:id="@+id/buttonSRegister"
        android:layout_width="@dimen/_195sdp"
        android:layout_height="@dimen/_37sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_30sdp"
        android:background="@drawable/round_btn"
        android:text="Register"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextSRegCourse" />

    <TextView
        android:id="@+id/textViewCSV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_gravity="center"
        android:text="Upload CSV File To Register Students?"
        android:textColor="#0072A0"
        android:textSize="@dimen/_11ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSRegister"
        app:layout_constraintVertical_bias="0.279" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/studentRegProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:elevation="@dimen/_10sdp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>